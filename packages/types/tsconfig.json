{
  "compilerOptions": {
    "incremental": true,
    "target": "es2023",
    "baseUrl": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@/req": ["src/api/request"],
      "@/res": ["src/api/response"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
